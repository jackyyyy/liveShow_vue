.main {
    position: absolute;
    width: 100%;
    height: calc(100% - 60px);
    top: 60px;
    z-index: 1;
    /*background: #ddd;*/
    transition: all .5s;
}

#app {
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-align: center;
    color: #2c3e50;
}

.app {
	position: relative;
	overflow-x: hidden;
    width: 100%;
    height: 100%;
}

.look_menu {
    animation: moveOut .5s ease-in-out forwards;
}

.look_body {
    animation: moveIn .5s ease-in-out forwards;
}

@keyframes moveOut {
    0% {
        right: 0;
    }
    100% {
        right: -200px;
    }
}

@keyframes moveIn {
    0% {
        right: -200px;
    }
    100% {
        right: 0;
    }
}
